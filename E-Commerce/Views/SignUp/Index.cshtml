@{
}
@model Customer

<div class="wrapper">
    <section style="width:50vw;"
             class="  vh-100 d-flex justify-content-center align-items-center p-0">
        <div class="form-container w-75 bg-white" style=" border-radius: 15px;">
            <section class="w-100 h-100">
                <div class="w-100 h-100">
                    <div class="row d-flex justify-content-center align-items-center p-lg-5 h-100">
                        <div>
                            <div>
                                <h1 style="color: #444;">Sign Up</h1>
                            </div>
                            <form asp-action="Registration"
                                  asp-controller="SignUp"
                                  method="post">
                                <div class="form-outline mb-2">
                                    <label class="form-label"
                                           for="form3Example3"
                                           style="margin-left: 0px;">
                                        Email address
                                    </label>
                                    <input asp-for="Email"
                                           type="email"
                                           id="form3Example3"
                                           class="form-control form-control-lg"
                                           placeholder="Email" />
                                    <span class="validation-msg" asp-validation-for="Email" ></span>
                                </div>
                                <div class="form-outline mb-2">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Password
                                    </label>
                                    <input asp-for="Password"
                                           type="password"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Password" />
                                    <span class="validation-msg" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-outline mb-2">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Phone
                                    </label>
                                    <input type="text"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Phone" />
                                    <span class="validation-msg" asp-validation-for="PhoneNumber"></span>
                                </div>
                                <div class="form-outline mb-2">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Address
                                    </label>
                                    <input type="text"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Address " />
                                    <span class="validation-msg" asp-validation-for="Address"></span>
                                </div>
                                <div class="text-center text-lg-start mt-4 pt-2">
                                    <button type="submit"
                                            class="btn btn-primary btn-lg"
                                            style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                        Sign Up
                                    </button>
                                </div>
                                <div>
                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                        Have an account?
                                        <a href="/SignIn" class="link-danger">
                                            Sign In
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
