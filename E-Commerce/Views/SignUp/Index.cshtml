@{
}
@model Customer

<div class="wrapper">
    <section style="width:50vw;"
             class="  vh-100 d-flex justify-content-center align-items-center p-0">
        <div class="w-75 bg-white" style=" border-radius: 25px;">
            <section class="w-100">
                <div class="w-100">
                    <div class="row d-flex justify-content-center align-items-center p-lg-5">
                        <div>
                            <form asp-action="Registration"
                                  asp-controller="SignUp"
                                  method="post">
                                <div class="divider d-flex align-items-center my-4"></div>
                                <div class="form-outline mb-4">
                                    <label class="form-label"
                                           for="form3Example3"
                                           style="margin-left: 0px;">
                                        Email address
                                    </label>
                                    <input asp-for="Email"
                                           type="email"
                                           id="form3Example3"
                                           class="form-control form-control-lg"
                                           placeholder="Email" />
                                    <div class="form-notch">
                                        <div class="form-notch-leading" style="width: 9px;"></div>
                                        <div class="form-notch-middle" style="width: 88.8px;"></div>
                                        <div class="form-notch-trailing"></div>
                                    </div>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Password
                                    </label>
                                    <input asp-for="Password"
                                           type="password"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Password" />
                                    <div class="form-notch">
                                        <div class="form-notch-leading" style="width: 9px;"></div>
                                        <div class="form-notch-middle" style="width: 64.8px;"></div>
                                        <div class="form-notch-trailing"></div>
                                    </div>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Phone
                                    </label>
                                    <input type="text"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Phone" />
                                    <div class="form-notch">
                                        <div class="form-notch-leading" style="width: 9px;"></div>
                                        <div class="form-notch-middle" style="width: 64.8px;"></div>
                                        <div class="form-notch-trailing"></div>
                                    </div>
                                </div>
                                <div class="form-outline mb-3">
                                    <label class="form-label"
                                           for="form3Example4"
                                           style="margin-left: 0px;">
                                        Address
                                    </label>
                                    <input type="text"
                                           id="form3Example4"
                                           class="form-control form-control-lg"
                                           placeholder="Address " />
                                    <div class="form-notch">
                                        <div class="form-notch-leading" style="width: 9px;"></div>
                                        <div class="form-notch-middle" style="width: 64.8px;"></div>
                                        <div class="form-notch-trailing"></div>
                                    </div>
                                </div>
                                <div class="text-center text-lg-start mt-4 pt-2">
                                    <button type="submit"
                                            class="btn btn-primary btn-lg"
                                            style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                        Sign Up
                                    </button>
                                </div>
                                <div>
                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                        Have an account?
                                        <a href="/SignIn" class="link-danger">
                                            Sign In
                                        </a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>
