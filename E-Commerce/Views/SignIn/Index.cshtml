@model Customer

<section class="vh-100 p-5" style="background-color: #eee;">
    <div class="overflow-hidden h-100" style="border-radius: 25px;">
        <section class="w-100 h-100">
            <div class="container-fluid bg-white h-100">
                <div class="row d-flex justify-content-center align-items-center p-lg-5">
                    <div class="col-md-9 col-lg-6 col-xl-6">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                             width="100%"
                             alt="Sample image" />
                    </div>

                    <div class="col-md-8 col-lg-6 col-xl-5 offset-xl-1">
                        <form asp-action="LogInAuth" asp-controller="SignIn" method="post">
                            <div class="form-outline mb-4">
                                <label class="form-label"
                                       for="form3Example3"
                                       style="margin-left: 0px;">
                                    Email address
                                </label>
                                <input asp-for="Email"
                                       type="email"
                                       id="form3Example3"
                                       class="form-control form-control-lg"
                                       placeholder="Enter a valid email address" />
                                <span class="validation-msg" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-outline mb-3">
                                <label class="form-label"
                                       for="form3Example4"
                                       style="margin-left: 0px;">
                                    Password
                                </label>
                                <input asp-for="Password"
                                       type="password"
                                       id="form3Example4"
                                       class="form-control form-control-lg"
                                       placeholder="Enter password" />
                                <span class="validation-msg" asp-validation-for="Password"></span>

                            </div>

                            <div class="text-center text-lg-start mt-4 pt-2">
                                <button type="submit"
                                        class="btn btn-primary btn-lg"
                                        style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                    Login
                                </button>
                                <p class="small fw-bold mt-2 pt-1 mb-0">
                                    Don't have an account?
                                    <a href="/SignUp" class="link-danger">
                                        Register
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
